<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bluetoochservice.bluetoochservice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
        <uses-permission android:name="android.permission.BLUETOOTH" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.bluetoochservice.activity.MyOrderListActivity"
            android:screenOrientation="portrait"

            android:windowSoftInputMode="adjustResize|stateHidden" />

        <activity
            android:name="com.example.bluetoochservice.activity.OrderDetailActivity"
            android:configChanges="orientation|keyboardHidden" />

        <activity
            android:name="com.example.bluetoochservice.activity.ConfirmOrderActivity"
            android:configChanges="orientation|keyboardHidden" />

    </application>

</manifest>
