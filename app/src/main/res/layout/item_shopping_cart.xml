<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/itemRadioOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/itemRadioOne"
            android:paddingLeft="20dp"
            android:text="00000000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/shopName"
            android:background="@drawable/arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="编辑" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layoutOne"
        android:background="@color/backgroundGray" />

    <RelativeLayout
        android:id="@+id/layoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/layoutOne">

        <CheckBox
            android:id="@+id/itemRadioTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/shoppingImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/itemRadioTwo"
            android:layout_toRightOf="@id/itemRadioTwo" />

        <TextView
            android:id="@+id/shoppingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/shoppingImage"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:text="良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯良品铺子猪肉脯" />

        <TextView
            android:id="@+id/shoppingPriceOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shoppingImage"
            android:layout_toRightOf="@id/shoppingImage"
            android:paddingLeft="10dp"
            android:text="$16.6"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/shoppingPriceTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shoppingImage"
            android:layout_toRightOf="@id/shoppingPriceOne"
            android:paddingLeft="20dp"
            android:text="$16.6"
            android:textColor="#DDDDDD" />

        <TextView
            android:id="@+id/shoppingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shoppingImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="*1"
            android:textColor="@color/textBlack" />

        <TextView
            android:id="@+id/shoppingFlavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/shoppingPriceOne"
            android:layout_toEndOf="@id/shoppingImage"
            android:layout_toRightOf="@id/shoppingImage"
            android:paddingLeft="10dp"
            android:text="劲辣"
            android:textColor="#AAAAAA"
            android:textSize="13sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/layoutTwo"
        android:background="@color/backgroundGray" />


</RelativeLayout>